					"name": "Update Transaction",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": \"transaction_id\",\n  \"quantity\": 15,\n  \"price\": 152.00,\n  \"notes\": \"Updated quantity\"\n}"
